<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="ADD CRIMINAL CASES"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/image_cancel"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_cancel_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <EditText
            android:id="@+id/EditSNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_bg"
            android:hint="S.No"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/EditDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_bg"
            android:hint="Date of case"
            android:inputType="date"
            android:focusableInTouchMode="false"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/EditFir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_bg"
            android:hint="FIR No."
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/EditNamePolice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_bg"
            android:hint="Name of Police"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/EditStatusCase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:imeOptions="actionNext"
            android:background="@drawable/edittext_bg"
            android:hint="Status of case"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/TextAddCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="ADD"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_gravity="right"
        android:drawableRight="@drawable/ic_add_circle_black_24dp"
        android:drawablePadding="05dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:layout_marginTop="15dp"/>

</LinearLayout>