<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/LinearLandDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_10"
        android:background="@drawable/edittext_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp_size_10"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Plot"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/TextLandPlot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_weight="1"
                android:text="Plot No-11"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="House Size"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/TextHouseSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_weight="1"
                android:text="1200 Sq.ft"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Area"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/TextLandArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_weight="1"
                android:text="Sukhsagarnagar"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kuccha"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/TextLandKuccha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_weight="1"
                android:text="Kuccha"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rental Income"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/TextRentalIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_weight="1"
                android:text="20000"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/txt_16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>