<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardSurvey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_size_10"
        app:cardCornerRadius="@dimen/padding_5"
        app:cardElevation="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_size_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextUriNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="URI No - 6345723"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_16sp" />

                <TextView
                    android:id="@+id/TextDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:text="Date : 20/07/2020"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/TextVendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:text="Vendor Name : Shashank Patil"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:text="Surveyor Name : Jhon Doe"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/TextCorportaion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/padding_5"
                android:gravity="left"
                android:textStyle="normal"
                android:text="Corportation : ED"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextSex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Sex : Male"
                    android:textColor="@color/black" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.01"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/TextWard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="1.1"
                    android:gravity="left"
                    android:text="Ward : 25"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.9"
                    android:gravity="left"
                    android:text="Age : 52"
                    android:textColor="@color/black" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.01"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/TextZone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.9"
                    android:gravity="left"
                    android:text="Zone : NZ"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.9"
                    android:gravity="left"
                    android:text="Category : General"
                    android:textColor="@color/black" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.01"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/TextArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.9"
                    android:gravity="left"
                    android:text="Area : FC Road"
                    android:textColor="@color/black" />


            </LinearLayout>


            <TextView
                android:id="@+id/TextStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/padding_5"
                android:gravity="left"
                android:text=""
                android:textColor="@color/green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/padding_5"
                android:gravity="left"
                android:text="Status : Completed"
                android:textColor="@color/black"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/TextRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/padding_5"
                android:text="Status : Completed"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_gravity="right">


                <Button
                    android:id="@+id/Btn_Pending"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/red"
                    android:text="Pending"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_height="35dp"/>

                <Button
                    android:id="@+id/Btn_Check"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/colorPrimary"
                    android:text="Check"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_height="35dp"/>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>