<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".supervisor.activities.SuspendedSupervisorSurveyListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_size_10"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/LinearDate"
            android:layout_width="0dp"
            android:layout_height="@dimen/size40dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImgDate"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/color_calender" />

            <EditText
                android:id="@+id/EditDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittext_bg"
                android:focusableInTouchMode="false"
                android:hint="Date"
                android:padding="@dimen/dp_size_10"
                android:paddingLeft="@dimen/padding_5"
                android:textSize="@dimen/txt_16sp" />

        </LinearLayout>


        <EditText
            android:id="@+id/text_search"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="@dimen/size40dp"
            android:inputType="text"
            android:layout_marginLeft="5dp"
            android:visibility="visible"
            android:background="@drawable/edittext_bg"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawablePadding="@dimen/padding_5"
            android:drawableTint="@color/colorPrimaryDark"
            android:hint="search"
            android:padding="8dp" />


    </LinearLayout>

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/SpinnerType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40dp"
        android:inputType="text"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginBottom="@dimen/dp_size_10"
        app:hintText="Select Surveyor"
        android:background="@drawable/edittext_bg"
        android:padding="8dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardSurvey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_size_10"
        app:cardCornerRadius="@dimen/padding_5"
        app:cardElevation="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_size_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextUriNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="URI No - 6345723"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_16sp" />

                <TextView
                    android:id="@+id/TextDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:text="Date : 20/07/2020"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/TextVendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:text="Vendor Name : Shashank Patil"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:text="Surveyor Name : Jhon Doe"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/TextCorportaion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/padding_5"
                android:gravity="left"
                android:textStyle="normal"
                android:text="Corportation : ED"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextSex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Sex : Male"
                    android:textColor="@color/black" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.01"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/TextWard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="1.1"
                    android:gravity="left"
                    android:text="Ward : 25"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.9"
                    android:gravity="left"
                    android:text="Age : 52"
                    android:textColor="@color/black" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.01"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/TextZone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.9"
                    android:gravity="left"
                    android:text="Zone : NZ"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/TextCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.9"
                    android:gravity="left"
                    android:text="Category : General"
                    android:textColor="@color/black" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.01"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/TextArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_size_10"
                    android:layout_weight="0.9"
                    android:gravity="left"
                    android:text="Area : FC Road"
                    android:textColor="@color/black" />


            </LinearLayout>


            <TextView
                android:id="@+id/TextStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/padding_5"
                android:gravity="left"
                android:text="Status : Suspended"
                android:textColor="@color/red"
                android:textStyle="bold" />




        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerSuspended"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

</LinearLayout>