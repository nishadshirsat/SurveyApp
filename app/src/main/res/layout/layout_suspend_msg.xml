<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_size_10"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/dp_size_10"
        app:cardElevation="05dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/suspended_icon"
                    android:padding="8dp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:textStyle="bold"
                android:text="Sorry...!"/>

            <TextView
                android:id="@+id/TextMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="@dimen/txt_16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_marginRight="@dimen/dp_size_10"
                android:text="This Survey has been suspended.Contact your Administrator for more information."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="@dimen/txt_16sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_size_10"
                android:layout_marginRight="@dimen/dp_size_10"
                android:text="Thank You...!"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="25sp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginBottom="@dimen/size_20dp">


                <Button
                    android:id="@+id/button_kyc_proceed"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size40dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:text="DONE"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="05dp"/>



            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>