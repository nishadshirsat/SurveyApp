<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".supervisor.activities.PendingSurveyorListActivity">

    <EditText
        android:id="@+id/text_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:visibility="visible"
        android:layout_margin="@dimen/dp_size_10"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:drawablePadding="@dimen/padding_5"
        android:drawableTint="@color/colorPrimaryDark"
        android:hint="search"
        android:padding="8dp" />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/SpinnerType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40dp"
        android:inputType="text"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/dp_size_10"
        android:layout_marginRight="@dimen/dp_size_10"
        android:layout_marginBottom="@dimen/dp_size_10"
        android:background="@drawable/edittext_bg"
        android:padding="8dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/dp_size_10"
        android:layout_marginBottom="@dimen/padding_5"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_size_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextSurveyorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : Janhavi Machindra Sonwane"
                        android:layout_marginTop="@dimen/padding_5"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_16sp"/>

                    <TextView
                        android:id="@+id/TextPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone : 9587457124"
                        android:layout_marginTop="@dimen/padding_5"
                        android:textStyle="normal"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/txt_16sp"/>

                    <TextView
                        android:id="@+id/TextCorporation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Corporation : East Delhi Muncipal Corporation"
                        android:layout_marginTop="@dimen/padding_5"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_14sp"/>

                    <TextView
                        android:id="@+id/TextZone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone : Shahdara South Zone"
                        android:layout_marginTop="@dimen/padding_5"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_14sp"/>

                    <TextView
                        android:id="@+id/TextTVC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TVC : "
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal"/>

                    <TextView
                        android:id="@+id/TextWard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ward : 1E"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal"/>

                    <TextView
                        android:id="@+id/TextArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area : Mayur Vihar"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/padding_5"
                        android:textColor="@color/colorAccent"
                        android:textStyle="normal"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ImgRight"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_30dp"
                    android:layout_weight="0.3"
                    android:visibility="gone"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>


        </LinearLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>